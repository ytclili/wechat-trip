.card {

    width: 100%;
    height: 128rpx;
    opacity: 1;
    display: flex;
    align-items: center;
    padding: 8px 0px 8px 0px;
}

.avatar-status::before {
    content: "";
    position: absolute;
    bottom: 0;
    right: 0;
    width: 24rpx;
    height: 24rpx;
    background-color: rgba(43, 255, 191, 1);
    /* 在线状态的颜色 */
    border-radius: 50%;
    /* 使其成为圆形 */
}

.avatar {
    width: 96rpx;
    height: 96rpx;
    position: relative;
    margin-right: 18rpx;
}


.avatar image {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    margin-right: 18rpx;
}

.content {
    flex: 1;

}

.name {
    /** 文本1 */
    font-size: 28rpx;
    font-weight: 600;
    line-height: 38rpx;
    color: rgba(51, 51, 51, 1);
    margin-bottom: 8rpx;
}

.message {
    /** 文本1 */
    font-size: 24rpx;
    line-height: 32rpx;
    color: rgba(51, 51, 51, 0.6);
}

.right {
    width: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.time {
    /** 文本1 */
    font-size: 24rpx;
    line-height: 32rpx;
    color: rgba(51, 51, 51, 0.6);
    margin-bottom: 8rpx;
}

.badge {
    width: 40rpx;
    height: 40rpx;
    background-color: red;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 24rpx;
    line-height: 32rpx;
    color: rgba(255, 255, 255, 1);
}