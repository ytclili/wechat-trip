.my {
    width: 100%;
    height: 100vh;
    background-color: #FFFFFF;
    overflow: scroll;
}

.my-header {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 364rpx;
    opacity: 1;
    background: radial-gradient(circle at top left, #DCE2FC, transparent),
        radial-gradient(circle at top right, #FFD796, transparent);
    filter: blur(50rpx);
}

.header-info {
    /* 清除了blur */
    position: relative;
    /* top: 196rpx; */
    margin-top: 196rpx;
}

.header-container {
    margin: 32rpx;
    display: flex;
    align-items: center;
    height: 168rpx;
    width: 100%;
}

.image-container {
    margin-right: 80rpx;
}

.image-container image {
    width: 168rpx;
    height: 168rpx;
    border-radius: 9999rpx;
}

.header-about {
    margin-right: 60rpx;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.about-item {
    width: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.item-number {
    /** 文本1 */
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 0px;
    line-height: 23.87px;
    color: rgba(51, 51, 51, 1);
}

.item-text {
    /** 文本1 */
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0px;
    line-height: 15.91px;
    color: rgba(51, 51, 51, 0.6);
    text-align: left;
    vertical-align: top;
}

.user-info {
    margin: 48rpx 48rpx 0 48rpx;
    height: 96rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.user-text {
    height: 100%;

}

.user-name {
    /** 文本1 */
    font-size: 18px;
    font-weight: 600;
    letter-spacing: 0px;
    line-height: 23.87px;
    color: rgba(51, 51, 51, 1);
    text-align: left;
    vertical-align: top;
    margin-bottom: 16rpx;
}

.user-desc {
    /** 文本1 */
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0px;
    line-height: 15.91px;
    color: rgba(51, 51, 51, 0.6);
    text-align: left;
    vertical-align: top;
}

.user-edit {
    width: 80px;
    display: flex;
    align-items: center;
    opacity: 1;
    border-radius: 44rpx;
    background: rgba(160, 92, 255, 0.1);
    justify-content: center;
    padding: 6px 8px 6px 8px;

}

.user-edit image {
    width: 20rpx;
    height: 20rpx;
    margin-right: 12rpx;
}

.edit-text {
    /** 文本1 */
    font-size: 12px;
    letter-spacing: 0px;
    line-height: 15.91px;
    color: rgba(51, 51, 51, 1);
    text-align: left;
    vertical-align: top;

}

.user-tags {
    display: flex;
    align-items: center;
    margin: 24rpx 48rpx 48rpx 48rpx;
}

.items-tag {
    height: 40rpx;
    opacity: 1;
    border-radius: 28rpx;
    background: rgba(245, 247, 255, 1);
    display: flex;
    align-items: center;
    padding: 4rpx 12rpx 4rpx 12rpx;
    margin-right: 16rpx;
    /** 文本1 */
    font-size: 24rpx;
    line-height: 32rpx;
    color: rgba(51, 51, 51, 1);

}